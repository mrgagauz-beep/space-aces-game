#!/usr/bin/env bash
# .githooks/pre-commit â€” wrapper that tries pwsh then Windows PowerShell
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
if command -v pwsh >/dev/null 2>&1; then
  pwsh -NoProfile -ExecutionPolicy Bypass -File "$SCRIPT_DIR/pre-commit.ps1"
elif command -v powershell >/dev/null 2>&1; then
  powershell -NoProfile -ExecutionPolicy Bypass -File "$SCRIPT_DIR/pre-commit.ps1"
else
  echo "[pre-commit] PowerShell not found, skipping hook."
fi
exit 0
